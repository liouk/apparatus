# __jump to ~/Workspace/futurae
function fu () {
  __jump "$HOME/Workspace/futurae" $1
}

# __jump to ~/Workspace/personal/github.com/liouk
function gl () {
  __jump "$HOME/Workspace/github.com/liouk" $1
}

# jump between subdirs of a base dir
function __jump () {
  local jump_basedir=$1
  shift
  case $1 in
    "ls"|"-l"|"--ls")
      ls -lah $jump_basedir
      ;;
    *)
      cd "$jump_basedir/$1"
      ;;
  esac
}

# blackbox keyrings switching
function bbox () {
  local rootdir="keyrings"
  local keyring="$rootdir/$1"

  case $1 in
    "")
      echo "current keyring: $BLACKBOXDATA"
      if command -v gum &> /dev/null
      then
        keyring=$(/bin/ls -1 $rootdir | gum choose)
        keyring="$rootdir/$keyring"
      else
        return
      fi
      ;;
    "-l"|"--list")
      echo "available keyrings:"
      /bin/ls -1 $rootdir
      return
      ;;
  esac

  [ -d "$keyring" ] || { echo "unknown keyring: $keyring"; return 1; }
  export BLACKBOXDATA="$keyring"
  echo "now using keyring: $keyring"
}

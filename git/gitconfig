[user]
    name = Ilias Rinis
    email = iliasr@gmail.com

[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[diff]
    tool = vimdiff

[color]
    ui = true

[color "branch"]
    current = red reverse
    local = blue
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[alias]
    ci = commit
    cl = clone
    cp = cherry-pick
    st = status -s
    co = checkout
    cb = checkout -b
    br = branch
    fp = fetch --prune

    # diffs
    df = diff
    dfc = diff --cached

    # add
    ap = add --patch
    ai = add --interactive

    # rebase
    ri = rebase --interactive

    # push/pull
    pu = push --set-upstream
    pl = pull
    pr = pull --rebase

    # reset aliases
    rhh = reset --hard HEAD
    rho = reset --hard origin

    # stash aliases
    sl = stash list
    sa = stash apply
    ss = stash save
    sh = stash
    sp = stash pop
    sc = stash clear

    # submodule aliases
    bup = submodule update --recursive
    bui = submodule update --init --recursive

    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"

    # log listing aliases
    # Author stats
    who = shortlog -s --
    # All my commits since yesterday midnight
    sup = !git log --since=yesterday.midnight --author=\"$(git config user.name)\" --oneline
    # All my commits since 1 week ago
    lw = !git log --since=\"1 week ago\" --author=\"$(git config user.name)\" --pretty=format:\"%Cgreen%cd %C(yellow)%h%Cred%d %Creset%s\" --decorate --date=format:\"%F %T\"
    # My last commit
    lc = log --name-status HEAD^..HEAD

    # tag aliases
    tl = tag -ln

    # merging aliases
    cours = "!f() { git co --ours $@ && git add $@; }; f"
    ctheirs = "!f() { git co --theirs $@ && git add $@; }; f"

    # file, commit changes aliases
    dl = "!git ll -1"
    dlc = diff --cached HEAD^
    dr  = "!f() { git diff "$1"^.."$1"; }; f"
    changes=diff --name-status -r
    diffstat=diff --stat -r

    # vimod
    vimod = "!vim -p `git status -s | awk '{ if ($1 == \"M\") print $2 }'`"

    # grep
    ggrep = "grep --break --heading --line-number"

[push]
    default = current
[init]
	templatedir = ~/.apparatus/git/templates

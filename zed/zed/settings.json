// Settings: https://zed.dev/docs/configuring-zed
// Features: https://zed.dev/features
{
	// general
	"restore_on_startup": "last_session",
	"auto_update": false,
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},

	// editor
	"cursor_blink": false,
	"current_line_highlight": "none",
	"soft_wrap": "editor_width",
	"vertical_scroll_margin": 4,
	"tabs": {
		"git_status": true,
		"file_icons": true
	},

	// git
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},

	// vim
	"vim_mode": true,
	"vim": {
		"use_smartcase_find": true,
		"use_system_clipboard": "on_yank"
	},

	// formatting
	"format_on_save": "on",
	"ensure_final_newline_on_save": false,
	"remove_trailing_whitespace_on_save": true,
	"always_treat_brackets_as_autoclosed": true,

	// theme, fonts & sizes
	"theme": "One Dark",
	"buffer_font_family": "JetBrains Mono NL",
	"buffer_font_size": 15.5,
	"ui_font_family": "JetBrains Mono NL",
	"ui_font_size": 16.5,
	"icon_theme": "Material Icon Theme",
	"experimental.theme_overrides": {
		"syntax": {
			"comment": {
				"font_style": "italic"
			},
			"comment.doc": {
				"font_style": "italic"
			}
		},
		"terminal.background": "#242529ff" // make terminal background a bit darker
	},

	// tabs & indentation
	"hard_tabs": true,
	"tab_size": 2,
	"auto_indent_on_paste": true,
	"indent_guides": {
		"enabled": false
	},

	// terminal
	"terminal": {
		"copy_on_select": true,
		"button": false,
		"blinking": "off",
		"cursor_shape": "block"
	},

	// project panel
	"project_panel": {
		"default_width": 360,
		"button": false
	},

	// ui
	"active_pane_modifiers": {
		"border_size": 0.5
	},
	"show_call_status_icon": false,
	"title_bar": {
		"show_sign_in": false,
		"show_user_picture": false
	},
	"tab_bar": {
		"show": true,
		"show_nav_history_buttons": false
	},
	"scrollbar": {
		"show": "never"
	},
	"features": {
		"edit_prediction_provider": "none"
	},
	"toolbar": {
		"quick_actions": false
	},
	"collaboration_panel": {
		"button": false
	},
	"outline_panel": {
		"button": false
	},
	"agent": {
		"button": false
	},
	"chat_panel": {
		"button": "never"
	},
	"notification_panel": {
		"button": false
	},
	"search": {
		"button": false
	},
	"status_bar": {
		"active_language_button": false
	},

	// Languages
	"languages": {
		"YAML": {
			"hard_tabs": false,
			"formatter": {
				"external": {
					"command": "yamlfmt", // https://github.com/google/yamlfmt
					"arguments": [
						"-formatter",
						"indent=2,indentless_arrays=true,retain_line_breaks=true",
						"-"
					]
				}
			},
			"format_on_save": "on"
		},
		"Markdown": {
			"show_completions_on_input": false
		},
		"Plain Text": {
			"show_completions_on_input": false
		}
	}
}
